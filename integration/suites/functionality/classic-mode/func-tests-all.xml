<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Peril Classic Mode Core Functionality Tests">
  <test name="Initial Game Phase Test (Random Country Assignment)" time-out="45000">
    <parameter name="countryAssignmentMode" value="random" />
    <groups>
      <run>
        <include name="func.init" />
        <include name="func.init.random" />
      </run>
    </groups>
    <classes>
      <class name="com.forerunnergames.peril.integration.core.func.init.InitialGamePhaseTestFactory" />
    </classes>
  </test>
  <test name="Initial Game Phase Test (Manual Country Assignment)" time-out="45000">
    <parameter name="countryAssignmentMode" value="manual" />
    <groups>
      <run>
        <include name="func.init" />
        <include name="func.init.manual" />
      </run>
    </groups>
    <classes>
      <class name="com.forerunnergames.peril.integration.core.func.init.InitialGamePhaseTestFactory" />
    </classes>
  </test>
</suite>
