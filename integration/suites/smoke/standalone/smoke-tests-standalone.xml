<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Peril Smoke Tests (Standalone)">
  <test name="Core Smoke Tests (Standalone)">
    <packages>
      <package name="com.forerunnergames.peril.integration.core.smoke" />
    </packages>
  </test>

  <test name="Server Smoke Tests (Standalone)">
    <packages>
      <package name="com.forerunnergames.peril.integration.server.smoke" />
    </packages>
    <groups>
      <run>
        <exclude name="serverType:dedicated" />
      </run>
    </groups>
  </test>
</suite>